---
import Section from "../Section.astro";
import { work } from "@cv";
---

<Section title="Experiencia laboral">
  <hr />
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, url, location, highlights }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual";

          return (
            <li>
              <article>
                <header>
                  <div class="company">
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h3>{location}</h3>
                  </div>
                  <div class="position">
                    <h4>{position}</h4>
                    <div>
                      <time datetime={startDate}>{startYear}</time>
                      {" - "}
                      <time datetime={endDate}>{endYear}</time>
                    </div>
                  </div>
                </header>

                <footer>
                  <ul class="highlights">
                    {highlights.map((highlight) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  article {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    /* color: #555; */
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  .highlights {
    display: flex;
    flex-direction: column;
    gap: 15px;
    list-style: disc;
    margin-left: 20px;
  }

  .company,
  .position {
    display: inline-flex;
    width: 100%;
    justify-content: space-between;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
